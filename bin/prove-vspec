prove_options=('--comments' '--failure' '--directives')
dep_dirs=()
t_args=()
vim_args=()




for i in "$@"
do
  case "$i" in
    *.t)
      t_args+=("$i")
      ;;
    *.vim)
      vim_args+=("$i")
      ;;
    *)
      t_args+=("$i")
      vim_args+=("$i")
      ;;
  esac
done




[[ $# == 0 || ${#t_args[@]} != 0 ]] &&
  prove "${prove_options[@]}" \
        --ext '.t' \
        "${t_args[@]}"
[[ $# == 0 || ${#vim_args[@]} != 0 ]] &&
  prove "${prove_options[@]}" \
        --ext '.vim' --exec "$(dirname "$0")/vspec ${dep_dirs[*]}" \
        "${vim_args[@]}"

# __END__
# vim: foldmethod=marker
